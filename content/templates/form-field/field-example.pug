extends /templates/_layouts/master

include ../_mixins/form-input/form-input

block body

  .container.sg-container
   form.max-w-md.mx-auto.px-4
      h1.text-xl.text-fit-default.mt-8.mb-4 Password creation
      .stack.mb-4
        .item(class="w-full sm:w-1/2")
          if error
            +input('Password', 'password', 'password', 'default', 'error', 'Here is a sample error message')
          else
            +input('Password', 'password', 'password', 'default')

        .item(class="w-full sm:w-1/2")
          if error
            +select('Province', 'province', 'error')
              option Alberta
              option Ontario
              option Quebec 
          else
            +select('Province', 'province')
              option Alberta
              option Ontario
              option Quebec 