extends /templates/_layouts/master

include mixins/form-input/form-input
include mixins/divider/divider
include mixins/checkbox/checkbox
include mixins/button/button
include mixins/radio-question/radio-question

block body

  .container.mx-auto.text-sm.border.text-grey-darkest.border-red.mt-8
    form.max-w-sm.mx-auto.px-4
      
        h1.text-xl.text-grey-darkest.mt-8.mb-4 Business Information
        .flex.flex-wrap.mb-4
          .stack(class="w-full sm:w-1/2 pr-2")
            .item
              +input('Company Name', 'text', 'companyname')
            .item
              +input('Business Address', 'text', 'businessaddress')
            .item
              +input('City', 'text', 'city')

          .stack(class="w-full sm:w-1/2 pl-2")
            .item
              +input('Legal Business name', 'text', 'legalbusinessname')
            .item
              +input('Business Address Line 2', 'text', 'businessaddress2')
            .flex.flex-wrap
              .stack(class="w-2/3 pr-1")
                .item
                  +input('Province', 'text', 'province')
              .stack(class="w-1/3 pl-1")    
                .item
                  +input('Post Code', 'text', 'postal')  

        +divider

        h1.text-xl.text-grey-darkest.mt-8.mb-4 Business Details
        .flex.flex-wrap.mb-4
          .stack(class="w-full sm:w-1/2 pr-2")
            .item
              +input('Business Website', 'text', 'businesswebsite')
            .item
              +input('Years in business', 'text', 'yearsinbusiness')

          .stack(class="w-full sm:w-1/2 pl-2")
            .item
              +input('Organization Type', 'text', 'organizationtype')

        +radio-question(
          'Do you have future plans to expand your business?', 
          'futureExpandPlans', 
          ['Yes', 'No'])

        .flex.flex-wrap.mb-4
          .stack(class="w-full sm:w-1/2 pr-2")
            .item
              +input('Typical no. of sales per week', 'text', 'salesperweek')

          .stack(class="w-full sm:w-1/2 pl-2")
            .item
              +input('Average transaction size', 'text', 'avgtransactionsize')

        +radio-question(
          'Do you have future plans to expand your business?', 
          'futureExpandPlans', 
          ['Yes', 'No'])

        +radio-question(
          'Do you currently offer financing to your customer?', 
          'financingToCustomer', 
          ['Yes', 'No'])     

        p.mb-4
          | Select the categories that apply to your business.

        each vertical in contentData.formData.verticals
          +checkbox(vertical.title, vertical.label, vertical.name)

        +divider

        .text-center.mb-16
          +button('Continue')(class='bg-blue')   
      



