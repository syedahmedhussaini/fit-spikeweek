extends /templates/_layouts/master

include _mixins/form-input/form-input
include _mixins/divider/divider
include _mixins/button/button
include _mixins/static-content/static-content

block body

  .container.sg-container

    +header

    form.max-w-lg.mx-auto.px-4
      h1.text-3xl.text-fit-default.mt-8.mb-4 Password creation
      .stack.mb-4
        .item(class="w-full sm:w-1/2")
          if floatingLabels
            +input('Password', 'password', 'password', 'floating')
          else
            +input('Password', 'password', 'password')
          .mt-3
            +password-validations(contentData.formData.passwordValidations)

      h1.text-3xl.text-fit-default.mt-8.mb-4 Business Information
      .stack.mb-4
        .item(class="w-full sm:w-1/2")
          if error
            if floatingLabels
              +input('Company Name', 'text', 'companyname', 'floating', 'error', 'That seems like a made up company name. Try again.')
            else
              +input('Company Name', 'text', 'companyname', 'standard', 'error', 'That seems like a made up company name. Try again.')
              
          else if floatingLabels
            +input('Company Name', 'text', 'companyname', 'floating')
          else
            +input('Company Name', 'text', 'companyname', 'standard')

        .item(class="w-full sm:w-1/2")
          if error
            if floatingLabels
              +input('Legal Business name', 'text', 'legalbusinessname', 'floating', 'error', 'That seems like a made up company name. Try again.')
            else
              +input('Legal Business name', 'text', 'legalbusinessname', 'standard', 'error', 'That seems like a made up company name. Try again.')

          else if floatingLabels
            +input('Legal Business name', 'text', 'legalbusinessname', 'floating')

          else
            +input('Legal Business name', 'text', 'legalbusinessname')

        .item(class="w-full sm:w-1/2")
          if floatingLabels
            +input('Business Address', 'text', 'businessaddress', 'floating')
          else
            +input('Business Address', 'text', 'businessaddress', 'standard')

        .item(class="w-full sm:w-1/2")
          if floatingLabels
            +input('City', 'text', 'city', 'floating')
          else
            +input('City', 'text', 'city')


        .item(class="w-full sm:w-1/2")
          if floatingLabels
            +input('Business Address Line 2', 'text', 'businessaddress2', 'floating')
          else
            +input('Business Address Line 2', 'text', 'businessaddress2')

        .stack(class="w-full sm:w-1/2") 
          .item(class="w-2/3")
            if floatingLabels
              +select('Province', 'province', 'floating')
                option Alberta
                option Ontario
                option Quebec 
            else
              +select('Province', 'province')
                option Alberta
                option Ontario
                option Quebec 

          .item(class="w-1/3")
            if floatingLabels
              +input('Post Code', 'text', 'postal', 'floating')  
            else
              +input('Post Code', 'text', 'postal')  


      +divider

      h1.text-3xl.text-fit-default.mt-8.mb-4 Business Details
      .stack.mb-4
        .item(class="w-full sm:w-1/2")
          if error
            if floatingLabels
              +input('Business Website (Optional)', 'text', 'businesswebsite', 'floating', 'error', 'Cannot be blank')
            else
              +input('Business Website (Optional)', 'text', 'businesswebsite', 'standard', 'error', 'Cannot be blank')

          else if floatingLabels
            +input('Business Website (Optional)', 'text', 'businesswebsite', 'floating')
          else
            +input('Business Website (Optional)', 'text', 'businesswebsite')

        .item(class="w-full sm:w-1/2")
          if error
            if floatingLabels
              +select('Organization Type', 'organizationtype', 'floating', 'error')
                option Corporation
                option Partnership
                option Limited Partnership
                option Proprietorship

            else
              +select('Organization Type', 'organizationtype', 'standard', 'error')
                option Corporation
                option Partnership
                option Limited Partnership
                option Proprietorship

          else if floatingLabels
            +select('Organization Type', 'organizationtype', 'floating')
              option Corporation
              option Partnership
              option Limited Partnership
              option Proprietorship
          else
            +select('Organization Type', 'organizationtype')
              option Corporation
              option Partnership
              option Limited Partnership
              option Proprietorship
            
        .item(class="w-full sm:w-1/2")
          if floatingLabels
            +input('Years in business', 'number', 'yearsinbusiness', 'floating')
          else
            +input('Years in business', 'number', 'yearsinbusiness')

      +radio-question(
        'Is your business eCommerce exclusive?',
        'ecommerceExclusive', 
        ['Yes', 'No'])

      .stack.mb-4
        .item(class="w-full sm:w-1/2")
          if floatingLabels
            +input('Typical no. of sales per week', 'tel', 'salesperweek', 'floating')
          else
            +input('Typical no. of sales per week', 'tel', 'salesperweek')

        .item(class="w-full sm:w-1/2")
          if floatingLabels
            +input('Average transaction size', 'number', 'avgtransactionsize', 'floating')

          else
            +input('Average transaction size', 'number', 'avgtransactionsize')

      +radio-question(
        'Do you have future plans to expand your business?', 
        'futureExpandPlans', 
        ['Yes', 'No'])

      +radio-question(
        'Do you currently offer financing to your customer?', 
        'financingToCustomer', 
        ['Yes', 'No'])     

      fieldset
        legend.mb-4.leading-normal Select the categories that apply to your business.
        each vertical in contentData.formData.verticals
          +checkbox(vertical.title, vertical.label, vertical.name)

      +divider

      h1.text-3xl.text-fit-default.mt-8.mb-4 One last thing...
      .stack.mb-2
        .item(class="w-full sm:w-1/2")
          if floatingLabels
            +input('Referral code (optional)', 'text', 'referralcode', 'floating')
          else
            +input('Referral code (optional)', 'text', 'referralcode')

        .item(class="w-full sm:w-1/2")
          if floatingLabels
            +select('How did you hear about us?', 'howdidyouhearaboutus', 'floating')
              option Advertisement
              option Direct Mail
              option In the News
          else
            +select('How did you hear about us?', 'howdidyouhearaboutus')
              option Advertisement
              option Direct Mail
              option In the News

      +divider

      .text-center.mb-16.mt-10
        if floatingLabels
          +button('Continue', 'floating')

        else
          +button('Continue')

    +footer
