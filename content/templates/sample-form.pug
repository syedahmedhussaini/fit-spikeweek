extends /templates/_layouts/master

include mixins/form-input/form-input

block body
  .container.mx-auto.mt-6
    form.w-full.max-w-md
      .flex.flex-wrap.-mx-3.mb-6

        .input(class='w-full md:w-1/2 px-3 mb-6 md:mb-0')
          +input('Company Name', 'text', 'companyname')

        .input(class='w-full md:w-1/2 px-3 mb-6 md:mb-0')
          +input('Legal Business name', 'text', 'legalbusinessname')

        .input(class='w-full md:w-1/2 px-3 mb-6 md:mb-0')
          +input('Business Address', 'text', 'businessaddress')

        .input(class='w-full md:w-1/2 px-3 mb-6 md:mb-0')
          +input('Business Address Line 2', 'text', 'businessaddress2')

        .input(class='w-full md:w-1/3 px-3 mb-6 md:mb-0')
          +input('City', 'text', 'city')

        .input(class='w-full md:w-1/3 px-3 mb-6 md:mb-0')
          +input('Province', 'text', 'province')

        .input(class='w-full md:w-1/3 px-3 mb-6 md:mb-0')
          +input('Postal Code', 'text', 'postal')


      .flex.flex-wrap.-mx-3.mb-6
        +input('Business Website (Optional)', 'text', 'website')

        +select('Organization Type', 'text', 'orgtype')
          option Corporation
          option Family Business
          option Chocolate factory
          
        +input('Years in Business', 'tel', 'yearsinbusiness')

        +select('Test dropdown', 'testdrop')
          option Value 1
          option Value 2
          option Value 3