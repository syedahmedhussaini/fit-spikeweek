extends /templates/_layouts/master

include mixins/form-input/form-input

block body
    form.w-full.max-w-md
        .flex.flex-wrap.-mx-3.mb-6

            .w-full.px-3.mb-6(class='md:w-1/2 md:mb-0')
                +input('First Name', 'text', 'firstname')

            .w-full.px-3(class='md:w-1/2')
                +input('Last Name', 'text', 'lastname')

        .flex.flex-wrap.-mx-3.mb-6

            .w-full.px-3
                +input('Password', 'password', 'password')
                    | Make it as long and as crazy as you'd like

        .flex.flex-wrap.-mx-3.mb-2

            .w-full.px-3.mb-6(class='md:w-1/3 md:mb-0')
                label.block.uppercase.tracking-wide.text-grey-darker.text-xs.font-bold.mb-2(for='grid-city')
                    | City
                input#grid-city.appearance-none.block.w-full.bg-grey-lighter.text-grey-darker.border.border-grey-lighter.rounded.py-3.px-4.leading-tight(type='text', placeholder='Albuquerque')

            .w-full.px-3.mb-6(class='md:w-1/3 md:mb-0')
                label.block.uppercase.tracking-wide.text-grey-darker.text-xs.font-bold.mb-2(for='grid-state')
                    | State
                .relative
                    select#grid-state.block.appearance-none.w-full.bg-grey-lighter.border.border-grey-lighter.text-grey-darker.py-3.px-4.pr-8.rounded.leading-tight
                        option New Mexico
                        option Missouri
                        option Texas
                    .pointer-events-none.absolute.pin-y.pin-r.flex.items-center.px-2.text-grey-darker
                        svg.fill-current.h-4.w-4(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 20 20')
                            path(d='M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z')

            .w-full.px-3.mb-6(class='md:w-1/3 md:mb-0')
                label.block.uppercase.tracking-wide.text-grey-darker.text-xs.font-bold.mb-2(for='grid-zip')
                    | Zip
                input#grid-zip.appearance-none.block.w-full.bg-grey-lighter.text-grey-darker.border.border-grey-lighter.rounded.py-3.px-4.leading-tight(type='text', placeholder='90210')
